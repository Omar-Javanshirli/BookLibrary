<UserControl x:Class="BookLibrary.Views.UserControls.HomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookLibrary.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Foreground="{StaticResource mainColor}" FontSize="60"  FontWeight="Black" FontFamily="Comic Sans MS">Book Library</Label>
            <TextBlock Foreground="{StaticResource mainColor}" FontSize="20"  FontWeight="Black" FontFamily="Comic Sans MS">Find Any Books</TextBlock>

            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding SelectLibrarianCommand}" Foreground="{StaticResource mainColor}" Width="200" Margin="20" FontSize="30" Style="{StaticResource MyButtonStyle}"  >Librarian</Button>
                <Button Command="{Binding SelectStudentCommand}" Foreground="{StaticResource mainColor}" Width="200" Margin="20" FontSize="30" Style="{StaticResource MyButtonStyle}"  >Student</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
